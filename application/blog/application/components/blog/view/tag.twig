<h2>{{ tag.name }}</h2>
<hr/>
{% if (posts) %}
    {% for post in posts %}
        {{ loop.first ? '' : '<hr/>' }}
        <div class="post">
            <small><a href="{{ url('author', {'id': post.owner.guid}) }}">{{ post.owner.name }}</a>
                - {{ post.publishTime|date("d.m.Y | H:i") }}</small>
            <br/>
            <h4><a href="{{ url('post', {'id': post.guid}) }}">{{ post.title }}</a></h4>
            {% if (post.tags) %}
                <div class="tags">
                    {% for tag in post.tags %}
                        <a href="{{ url('tag', {'id': tag.guid}) }}">{{ tag.name }}</a>{{ loop.last ? '' : ',' }}
                    {% endfor %}
                </div>
            {% endif %}
            <br/>
            {{ post.content[:250] }}... <a href="{{ url('post', {'id': post.guid}) }}">{{ translate('read more') }}</a>
        </div>

    {% endfor %}
{% else %}
    <h2>{{ translate('No posts found.') }}</h2>
{% endif %}
<hr/>
<a href="{{ url('index') }}">{{ translate('Back to all posts') }}</a>